<h1>Listando Problemas</h1>

<table>
	<tr>
		<th>Nome</th>
		<th>Categoria</th>
		<th>Dificuldade</th>
		<th>Link</th>
	</tr>

	<% @problems.each do |problem| %>
		<tr>
			<td><%= problem.nome %></td>
			<td><%= problem.categoria %></td>
			<td><%= problem.dificuldade %></td>
			<td><%= problem.link %></td>
			<td><%= link_to 'Apagar', problem_path(problem), method: :delete, data: {confirm: 'Tem Certeza?'} %></td>
		</tr>
	<%end%>
</table>

<%= link_to 'Cadastrar Problema', new_problem_path %>