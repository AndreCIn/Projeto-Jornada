<p>
	<strong>Nome:</strong>
	<%= @problem.nome %>
</p>

<p>
	<strong>Link:</strong>
	<%= @problem.link %>
</p>

<p>
	<strong>Dificuldade:</strong>
	<%= @problem.dificuldade %>
</p>

<p>
	<strong>Categoria:</strong>
	<%= @problem.categoria %>
</p>

<h2>Reviews</h2>
<% @problem.reviews.each do |r| %>
	<p>
		<strong>Nota:</strong>
		<%= r.rate %>
	</p>

	<p>
		<strong>Comentario:</strong>
		<%= r.comment %>
	</p>
<% end %>

<h2>Avalie esse Problema:</h2>
<%= form_for([@problem, @problem.reviews.build]) do |f| %>
	<p>
		<%= f.label :rate %><br>
		<%= f.range_field(:rate, in: 1..10) %>
	</p>

	<p>
		<%= f.label :comment %><br>
		<%= f.text_area :comment %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<%end%>

<%= link_to 'Listar Problemas', problems_path %>
<%= link_to 'Editar', edit_problem_path(@problem) %>